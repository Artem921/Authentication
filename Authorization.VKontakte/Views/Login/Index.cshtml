@model Login
<div style="margin:30px">
	<div class="text-center">
		<main class="form-row">
			<h2>
				Login with external provider
			</h2>
			<form asp-controller="Login" asp-action="ExternalLogin" asp-route-returnUrl="@Model.returnUrl" >
				@foreach(var provider in Model.ExternalProvider)
				{
					<button type="submit" name="provider" value="@provider.Name">@provider.DisplayName</button>
				}
			</form>
			<form method="post" asp-controller="Login" asp-action="Login">
				<div class="form-floating">
					<h1 class="lead">Вход</h1>
				</div>
				
				<div class="form-floating">
					<input asp-for="Email" type="text" class="form-control" id="validationDefault01" placeholder="email">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input type="password" asp-for="Password" class="form-control" id="validationDefault02" placeholder="password">
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<button class="btn btn-outline-primary" type="submit">Войти</button>
			</form>
		</main>
	</div>
</div>